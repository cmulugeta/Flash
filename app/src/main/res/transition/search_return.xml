<transitionSet
    android:startDelay="200"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <transitionSet android:duration="400">
        <targets>
            <target android:targetId="@id/background" />
            <target android:targetId="@id/searchBackground" />
        </targets>
        <transition
            class="com.cmulugeta.mediaplayer.ui.transition.CircularReveal"
            app:centerOn="@id/end"
            android:interpolator="@android:interpolator/linear_out_slow_in" />
    </transitionSet>
    <fade
        android:duration="120"
        android:interpolator="@android:interpolator/fast_out_linear_in">
        <targets>
            <target android:targetId="@id/searchView" />
        </targets>
    </fade>
    <fade
        android:duration="400"
        android:interpolator="@android:interpolator/fast_out_linear_in">
        <targets>
            <target android:targetId="@id/background"/>
        </targets>
    </fade>
    <fade
        android:duration="400"
        android:interpolator="@android:interpolator/fast_out_slow_in">
        <targets>
            <target android:targetId="@android:id/navigationBarBackground"/>
        </targets>
    </fade>
</transitionSet>